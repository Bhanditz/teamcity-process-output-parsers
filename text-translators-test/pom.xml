            <scope>system</scope>
            <systemPath>${teamcity.distribution.path}/buildAgent/lib/common-impl.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>org.jetbrains.teamcity</groupId>
            <artifactId>server-impl</artifactId>
            <version>${teamcity-version}</version>
            <scope>system</scope>
            <systemPath>${teamcity.distribution.path}/webapps/ROOT/WEB-INF/lib/server.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>org.jetbrains.teamcity</groupId>
            <artifactId>db-impl</artifactId>
            <version>${teamcity-version}</version>
            <scope>system</scope>
            <systemPath>${teamcity.distribution.path}/webapps/ROOT/WEB-INF/lib/db.jar</systemPath>
        </dependency>

    </dependencies>
    <build>
        <sourceDirectory>test</sourceDirectory>
        <testResources>
            <testResource>
                <directory>testData</directory>
            </testResource>
            <testResource>
                <directory>resources</directory>
            </testResource>
        </testResources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.16</version>
                <configuration>
                   <suiteXmlFiles>
                       <suiteXmlFile>testng.xml</suiteXmlFile>
                   </suiteXmlFiles>
                   <forkMode>never</forkMode>
                   <!--<jvm>-Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=6666 -Xnoagent -Djava.compiler=NONE</jvm>-->
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>