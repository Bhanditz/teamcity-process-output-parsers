        </dependency>
        <dependency>
            <groupId>org.jetbrains.teamcity</groupId>
            <artifactId>agent-laucher-api</artifactId>
            <version>${teamcity-version}</version>
            <scope>system</scope>
            <systemPath>${teamcity.distribution.path}/buildAgent/lib/launcher-api.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>org.jetbrains.teamcity</groupId>
            <artifactId>agent</artifactId>
            <version>${teamcity-version}</version>
            <scope>system</scope>
            <systemPath>${teamcity.distribution.path}/buildAgent/lib/agent.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>org.jetbrains.teamcity</groupId>
            <artifactId>app-wrapper</artifactId>
            <version>${teamcity-version}</version>
            <scope>system</scope>
            <systemPath>${teamcity.distribution.path}/buildAgent/lib/app-wrapper.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>org.jetbrains.teamcity</groupId>
            <artifactId>agent-upgrade</artifactId>
            <version>${teamcity-version}</version>
            <scope>system</scope>
            <systemPath>${teamcity.distribution.path}/buildAgent/lib/agent-upgrade.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>org.jetbrains.teamcity</groupId>
            <artifactId>common-impl</artifactId>
